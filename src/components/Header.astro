---
import { Image } from "astro:assets";
import logo from "../assets/logica.png";

const navLinks = [
  { name: "Inicio", href: "/" },
  { name: "Servicios", href: "/servicios" },
  { name: "Nosotros", href: "/nosotros" },
  { name: "Contacto", href: "/contacto" },
];
---

<header class="sticky top-0 z-50 shadow-sm bg-[#1A2A44]">
  <nav class="container mx-auto px-4">
    <div class="flex items-center justify-between py-2">
      {/* Logo Brand */}
      <a href="/" class="block">
        <Image
          src={logo}
          alt="Lógica Logo"
          height={90}
          class="h-[90px] w-auto object-contain"
        />
      </a>

      {/* Desktop Menu */}
      <div class="hidden lg:flex items-center space-x-8">
        {
          navLinks.map((link) => (
            <a
              href={link.href}
              class="text-[rgba(255,255,255,0.55)] hover:text-white transition-colors font-medium no-underline text-lg"
            >
              {link.name}
            </a>
          ))
        }
      </div>

      {/* Mobile Menu Button */}
      <button
        id="menu-toggle"
        class="lg:hidden text-[rgba(255,255,255,0.55)] hover:text-white focus:outline-none p-2 border border-[rgba(255,255,255,0.1)] rounded"
      >
        <svg
          class="w-8 h-8"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>

    {/* Mobile Menu Links (Oculto por defecto) */}
    <div
      id="mobile-menu"
      class="hidden lg:hidden pb-4 border-t border-gray-700"
    >
      <ul class="flex flex-col space-y-4 mt-4">
        {
          navLinks.map((link) => (
            <li>
              <a
                href={link.href}
                class="block text-[rgba(255,255,255,0.55)] hover:text-white transition-colors"
              >
                {link.name}
              </a>
            </li>
          ))
        }
      </ul>
    </div>
  </nav>
</header>

<script>
  // Lógica simple para el toggle del menú móvil sin React
  const btn = document.getElementById("menu-toggle");
  const menu = document.getElementById("mobile-menu");

  btn?.addEventListener("click", () => {
    menu?.classList.toggle("hidden");
  });
</script>
